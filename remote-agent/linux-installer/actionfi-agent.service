[Unit]
Description=ActionFi Remote Agent
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/actionfi-agent
ExecStart=/opt/actionfi-agent/node/bin/node /opt/actionfi-agent/index.js
Restart=always
RestartSec=10
Environment=NODE_ENV=production
Environment=PATH=/opt/actionfi-agent/node/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

[Install]
WantedBy=multi-user.target
